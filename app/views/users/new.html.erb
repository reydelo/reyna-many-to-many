<div class="page-header">
  <h1>Sign Up!</h1>
</div>

<%= form_for :user, url: '/users' do |f| %>

     <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
     </p>

     <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
     </p>

      <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
     </p>

<%= f.submit %>

<% end %>
