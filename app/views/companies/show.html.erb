<div class='page-header'>
  <h1> <%= @company.name %> <%= @company.suffix %> </h1>
</div>

<%= link_to "Review this Company", new_company_company_review_path(@company) %>
<br>
<br>
<br>
<table class="table table-striped">
  <h2>Products of <%= @company.name %> <%= @company.suffix %> </h2>
  <tr>
      <th>Name</th>
      <th>Price</th>
      <th></th>
  </tr>
      <tbody>
        <% @company.products.each do |product| %>
          <tr>
              <td><%= link_to product.name, product_path(product) %> </td>
              <td>$<%=product.price.round(2) %></td>
              <td><%= link_to 'Create Review', new_product_product_review_path(product) %> </td>
         </tr>
            <% end %>
      </tbody>
</table>
<br>
<br>
<br>
<br>

<table class="table table-striped">
            <h2>Company Reviews for <%= @company.name %> <%= @company.suffix %> </h2>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Rating</th>
              <th>User</th>
           </tr>
              <tbody>
                <% @company.company_reviews.each do |company_review| %>
                  <tr>
                      <td><%= company_review.title %></td>
                      <td><%= company_review.description %></td>
                      <td><%= company_review.rating %></td>
                      <td> <%= company_review.user.name %> </td>
                 </tr>
                    <% end %>
              </tbody>
      </table>
